<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <title>Document</title>
    <style>
        .chat-content {
          height: 450px;
          overflow-y: scroll;
          padding: 10px;
        }
        .chat-content li {
          margin-top: 10px;
          list-style: none;
        }
        .text-small {
          font-size: 12px;
          color: gray;
          margin-bottom: 0;
        }
        .chat-box {
          background: #eee;
          padding: 5px;
          border-radius: 5px;
          float: left;
        }
        .mine {
          float: right;
        }
    </style>
</head>
<body>

<%- include('nav.html') %>

<h4 class="ml-2 mt-4"><strong>채팅방</strong></h4>
<input type="hidden" value="<%= user.id %>" id="user" >

<div class="container p-4 detail">
  <div class="row">
    <div class="col-3">
      <ul class="list-group chat-list">
        <% for(var i = 0; i < data.length; i++) { %>
          <li class="list-group-item" data-id="<%= data[i]._id %>" data-id="<%= data[i]._id %>" data-user="<%= data[i].user[1] %>">
            <h6> <%= data[i].user[1] %> </h6>
            <h6 class="text-small"> <%= data[i].user[0] %> </h6>
          </li>
        <% } %>
    </div>

    <div class="col-9 p-0">
      <div class="chat-room">
        <ul class="list-group chat-content">
          <li><span class="chat-box mine">채팅방1 내용</span></li>
        </ul>
        <div class="input-group">
          <input class="form-control" id="chat-input">
          <button class="btn btn-secondary" id="send">전송</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.js"></script>

<script>
    var parentId = '';
    var eventSource;
    $('.list-group-item').click(function() {
        $('.chat-content').html('');
        parentId = this.dataset.id;
        postUser = this.dataset.user;
        if(eventSource != undefined) {
            eventSource.close()
        }
        eventSource = new EventSource('/message/'+ parentId);
        eventSource.addEventListener('test', function(e){
            var data = JSON.parse(e.data);
            console.log(data);
            data.forEach((i) => {
                var user = $('#user').val();
                if(user) {
                    $('.chat-content').append('<li><span class="chat-box mine">'+ i.content +'</span></li>')
                }else {
                    $('.chat-content').append('<li><span class="chat-box">'+ i.content +'</span></li>')
                }

            })
        })
    })

    $('#send').click(function(){
        var data = {
            parent : parentId,
            postUser : postUser,
            content : $('#chat-input').val(),
        }
        $.post('/sendChat', data).then(() => {

        })
        $('#chat-input').val('');
    })
</script>

